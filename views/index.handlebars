<div class="container">

    <section class="Top">
        <div class="heading">
            <h1><a href="/greeted" class="nav-link text-info">Greetings</a></h1>
        </div>
    </section>


    <section class="middle">
        <div class="functionality">

            <h5 style="color: #b10f65;">
                Number of Greetings:
                <span  class="count" style="color: #b10f65;">{{count}}</span>
            </h5>

            <form action="/Greetings" method="POST">

                <div class="greet">
                    <p class="message" style="color: white;" >{{greeted}}</p>
                </div>

                <div class="Error">
                    <p class="message"></p>
                </div>

                <label for="nameInput" style="color: #b10f65;">Name:</label>
                <input id="nameInput" type="text" name="nameInput" class="textBox" placeholder="Enter your name">

                <div class="row">
                    <div class="col-sm-4">
                        <input type="radio" name="Language" value="Eng" id="English">
                        <label for="English" style="color: #b10f65;">English</label>
                    </div>
                    <div class="col-sm-4">
                        <input type="radio" name="Language" value="Esp" id="Spanish">
                        <label for="Spanish" style="color: #b10f65;">Spanish</label>
                    </div>
                    <div class="col-sm-4">
                        <input type="radio" name="Language" value="Ven" id="TshiVenda">
                        <label for="TshiVenda" style="color: #b10f65;">TshiVenda</label>
                    </div>
                </div>

                <button type="submit" value="Greet Me" class="btn btn-primary btn-sm greetings">Greet</button>
            </form>
            <form action="" method="POST">

                <button type="submit" value="Clear" class="btn btn-primary btn-sm clearing">Clear</button>
            </form>
        </div>


    </section>


</div>

